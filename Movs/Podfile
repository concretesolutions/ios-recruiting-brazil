platform :ios, '13.2'

target 'Movs' do
  use_frameworks!
 
  pod 'SwiftLint'
  pod 'SnapKit', '~> 5.0.0'

  target 'MovsUITests' do
    inherit! :search_paths

    pod 'Quick'
    pod 'Nimble-Snapshots'
  end

  target 'MovsFunctionalTests' do
    inherit! :search_paths
   
    pod 'Quick'
    pod 'Nimble'
    pod 'KIF', :configurations => ['Debug']
  end

  target 'MovsTests' do
    inherit! :search_paths

    pod 'Nimble'
    pod 'Quick'
  end

end
